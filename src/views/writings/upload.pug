extends ../base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Text", required, type="text", name="text", minlength=20)
        input(placeholder="Categories, separated by comma.", required, type="text", name="categories")
        input(type="submit", value="Upload Writing")